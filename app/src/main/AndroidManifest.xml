        </activity>
        <activity android:name=".ReservationActivity">
            <intent-filter>
                <action android:name="com.example.hetavdesai.pl2project.ReservationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminHomeActivity">
            <intent-filter>
                <action android:name="com.example.hetavdesai.pl2project.AdminHomeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
