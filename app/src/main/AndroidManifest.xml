        </activity>
        <activity android:name=".AdminReservationSummaryActivity">
            <intent-filter>
                <action android:name="com.example.hetavdesai.pl2project.AdminReservationSummaryActivity" />

                <category android:name="android.intent.category.DEFAULT" />
